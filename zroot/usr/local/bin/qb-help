#!/bin/sh

. /usr/local/lib/quBSD/msg-help.sh

get_options() {
	while getopts hvp: opts ; do case $opts in
		h) msg_help -eu ;;
		p) PARAM="$OPTARG" ; shift ;;
   esac  ;  done  ;  shift $(( OPTIND - 1 ))

	ACTION="$1"
}

main() {
	case $ACTION in
		list|show|scripts|commands) msg_help -m _list_scripts ;;

		param|params|PARAM|PARAMS|parameter|parameters|PARAMETER|PARAMETERS)
				[ "$VERBOSE" ] && msg_help -m _verb_params || msg_help -m _params ;;

		'') msg_help "help_msg" ;;
	esac
}


get_options "$@"

main





