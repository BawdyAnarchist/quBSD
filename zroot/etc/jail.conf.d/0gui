0gui {
	# Standard Settings
	host.hostname="$name";
	path="/qubsd/$name";
	persist;

	# File System Basics
	devfs_ruleset="7";
	mount.devfs;
	mount += "/zusr/$name/rw    $path/rw                     nullfs     rw 0 0";
	mount += "/zusr/$name/home  $path/home                   nullfs     rw 0 0";

	# Linuxulator - Ubuntu version. quBSD links both home directories and jailed user names
	mount += "/zusr/$name/home  $path/compat/ubuntu/home     nullfs     rw,0 0";
	mount += "devfs             $path/compat/ubuntu/dev      devfs      rw,late 0 0";
	mount += "tmpfs             $path/compat/ubuntu/dev/shm  tmpfs      rw,late,size=1g,mode=1777 0 0";
	mount += "fdescfs           $path/compat/ubuntu/dev/fd   fdescfs    rw,late,linrdlnk 0 0";
	mount += "linprocfs         $path/compat/ubuntu/proc     linprocfs  rw,late 0 0";
	mount += "linsysfs          $path/compat/ubuntu/sys      linsysfs   rw,late 0 0";
	mount += "$path/tmp         $path/compat/ubuntu/tmp      nullfs     rw,late 0 0";

	# No X11 mounts for 0gui. Not supposed to run actual programs 

	# Networking
	vnet;

	# Startup/Shutdown Scripts
	exec.clean;
	stop.timeout=    "5";
	exec.consolelog= "/dev/null";
	exec.prepare=    "/usr/local/etc/quBSD/exec-prepare $name";
	exec.prestart=   "/usr/local/etc/quBSD/exec-prestart $name";
	exec.created=    "/usr/local/etc/quBSD/exec-created $name";
	exec.start=      "sh /etc/rc";
	exec.poststart=  "/usr/local/etc/quBSD/exec-poststart $name &";
	exec.prestop=    "/usr/local/etc/quBSD/exec-prestop $name";
	exec.stop=       "sh /etc/rc.shutdown";
	exec.release=    "/usr/local/etc/quBSD/exec-release $name";
}
